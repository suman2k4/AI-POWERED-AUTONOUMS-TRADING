# ==============================================================================
# AI-Powered Autonomous Trading Platform - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control
# ==============================================================================

# -----------------
# Database
# -----------------
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=password
TIMESCALE_DB=trading_timeseries

# -----------------
# Redis
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------
# Kafka / Event Bus
# -----------------
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=trading-platform
KAFKA_SIGNALS_TOPIC=trading.signals
KAFKA_TICKS_TOPIC=market.ticks
KAFKA_AUDIT_TOPIC=audit.logs

# -----------------
# Node.js Server
# -----------------
NODE_ENV=development
PORT=5001
API_BASE_URL=http://localhost:5001
SESSION_SECRET=change-this-to-a-random-secret-key-in-production
CORS_ORIGIN=http://localhost:5001

# -----------------
# Go Execution Engine
# -----------------
EXECUTION_ENGINE_HOST=localhost
EXECUTION_ENGINE_PORT=8080
EXECUTION_ENGINE_REDIS_STREAM=execution.orders

# -----------------
# AI/ML Services
# -----------------
GEMINI_API_KEY=your_google_gemini_api_key_here
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=trading-models
MODEL_CACHE_TTL_SECONDS=60

# -----------------
# Trading Configuration
# -----------------
PAPER_TRADE_MODE=true
DEFAULT_SLIPPAGE_BPS=10
DEFAULT_COMMISSION_BPS=5
MAX_POSITION_SIZE_PERCENT=10
RISK_FREE_RATE=0.02

# -----------------
# Performance Targets
# -----------------
TARGET_LATENCY_MS=100
TARGET_MODEL_ACCURACY=0.70
TARGET_REBALANCE_SPEEDUP_PERCENT=25

# -----------------
# Observability
# -----------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=info

# -----------------
# Security
# -----------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=change-this-jwt-secret-in-production
API_KEY_HEADER=X-API-Key

# -----------------
# Broker API (Add your broker credentials)
# -----------------
# For Alpaca
ALPACA_API_KEY=your_alpaca_key
ALPACA_API_SECRET=your_alpaca_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# For Interactive Brokers
IB_HOST=localhost
IB_PORT=7497
IB_CLIENT_ID=1

# For Binance
BINANCE_API_KEY=your_binance_key
BINANCE_API_SECRET=your_binance_secret

# -----------------
# Market Data Feeds
# -----------------
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
IEX_API_KEY=your_iex_api_key
